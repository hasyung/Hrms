<div id="content-wrap">
    <div id="top-bar"></div>
    <div id="login-wrap">
        <img id="locator" src="/images/login-avator.png" width="240px" style="margin-bottom: 20px;">

        <%if flash[:error].present?%>
          <div class="error">
              <%=flash[:error]%>
          </div>
        <%end%>

        <%=form_tag("/sessions") do%>
            <input id="employee_no" required minlength="6" type="text" name="user[employee_no]" placeholder="员工编号" />
            <input id="password" type="password" name="user[password]" placeholder="密码" />
            <br />
            <button id="submit">登录</button>
        <%end%>
    </div>
</div>
